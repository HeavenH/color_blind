<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <Button
                android:text="@string/teste_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/start_activty_1"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.111" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.42"/>
        <Button
                android:text="TESTE 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/start_activty_2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.111" app:layout_constraintVertical_bias="0.541"/>
        <Button
                android:text="TESTE 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/start_activty_3"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.111" app:layout_constraintVertical_bias="0.666"/>
        <Button
                android:text="Verificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/verifyButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="51dp" android:layout_marginBottom="75dp"/>
        <TextView
                android:text="resposta_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/answer1"
                app:layout_constraintBaseline_toBaselineOf="@+id/start_activty_1" android:layout_marginStart="68dp"
                app:layout_constraintStart_toEndOf="@+id/start_activty_1"/>
        <TextView
                android:text="resposta_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/answer2"
                app:layout_constraintBottom_toBottomOf="@+id/start_activty_2"
                android:layout_marginEnd="4dp" android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="@+id/answer1"/>
        <TextView
                android:text="resposta_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/answer3"
                app:layout_constraintBottom_toBottomOf="@+id/start_activty_3"
                android:layout_marginEnd="8dp" android:layout_marginBottom="12dp"
                app:layout_constraintEnd_toEndOf="@+id/answer2"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/resultTest"
                app:layout_constraintBaseline_toBaselineOf="@+id/verifyButton" android:layout_marginStart="48dp"
                app:layout_constraintStart_toEndOf="@+id/verifyButton"/>
        <TextView
                android:text="O que é?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                android:layout_marginStart="8dp" android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"/>
        <TextView
                android:text="Daltonismo é uma perturbação da percepção visual caracterizada pela incapacidade de diferenciar todas ou algumas cores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="128dp" android:layout_marginStart="27dp"/>
        <TextView
                android:text="Faça o teste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="36dp" android:layout_marginBottom="39dp"
                app:layout_constraintBottom_toTopOf="@+id/start_activty_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>